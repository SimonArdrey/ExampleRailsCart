<p id="notice"><%= notice %></p>

<h1>Cart Products</h1>

<% unless @cart %>
  You have no items in your cart
<% end %>

<% if @cart %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Qty</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cart.cart_products.each do |line_item| %>
        <tr>
          <td><%= line_item.product.name %></td>
          <td><%= line_item.product.price %></td>
          <td><%= line_item.qty %></td>
          <td><%= link_to 'Remove', cart_path(cart_product_id: line_item.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'View', product_path(line_item.product) %></td>
        </tr>
      <% end %>
        <tr>
          <td colspan="5">
            Total: <%= @cart.total_price %>
          </td>
        </tr>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'Back', products_path %>
